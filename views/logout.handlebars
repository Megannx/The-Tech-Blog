<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logout</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5dc; /* Light beige background */
            color: #333;
            box-sizing: border-box;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* 3D effect */
            border-radius: 10px;
            width: 120%; /* Full width */
            box-sizing: border-box;
            position: relative;
            z-index: 1;
        }

        nav {
            display: flex;
            justify-content: center;
            width: 100%;
            padding: 10px;
            background-color: #333;
            box-sizing: border-box;
            position: fixed;
            top: 0;
            left: 0;
        }

        nav a {
            color: #fff;
            text-decoration: none;
            padding: 12px 24px;
            font-size: 18px;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        nav a:hover {
            background-color: #555;
        }

        main {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            flex: 1;
            padding: 20px;
        }

        .form-container {
            max-width: 500px;
            width: 100%;
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-submit {
            background-color: #333;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .btn-submit:hover {
            background-color: #555;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4);
        }

        .modal-content {
            background-color: #fff;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 600px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 10px;
        }

        .modal-header, .modal-body, .modal-footer {
            padding: 10px;
        }

        .modal-header {
            border-bottom: 1px solid #eee;
        }

        .modal-footer {
            border-top: 1px solid #eee;
            text-align: right;
        }

        .modal-close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .modal-close:hover {
            color: black;
            cursor: pointer;
        }

        .show {
            display: block; /* Show the modal */
        }

        .footer-button {
            margin-top: auto;
            padding: 15px;
            background-color: #333;
            color: white;
            border: none;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
        }

        .footer-button:hover {
            background-color: #555;
        }
    </style>
</head>
<body>
    <header>
        <h1>Logout from Your Blog</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/dashboard">Dashboard</a>
        </nav>
    </header>
    <main></main>
    <button id="open-modal" class="footer-button">Logout</button>

    <!-- The Modal -->
    <div id="logout-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-close" id="close-modal">&times;</span>
                <h2>Logout Modal</h2>
            </div>
            <div class="modal-body">
                <form class="logout-form">
                    <p>Are you sure you want to log out?</p>
                    <div class="form-group">
                        <button class="btn-submit" type="submit">Logout</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn-submit" id="close-modal-footer">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('open-modal').addEventListener('click', function() {
            document.getElementById('logout-modal').classList.add('show');
        });

        document.getElementById('close-modal').addEventListener('click', function() {
            document.getElementById('logout-modal').classList.remove('show');
        });

        document.getElementById('close-modal-footer').addEventListener('click', function() {
            document.getElementById('logout-modal').classList.remove('show');
        });

        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('.logout-form').addEventListener('submit', function(event) {
                event.preventDefault();
                window.location.href = '/'; // Adjust to your logout URL
            });
        });
    </script>
</body>
</html>
